<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:tag="haici_sdkb_search_result_recommend_item">
    <ImageView
        android:id="@+id/haici_sdkb_search_result_recommend_arrow"
        android:tag="haici_sdkb_search_result_recommend_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/haici_sdkb_arrow"/>
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_toLeftOf="@id/haici_sdkb_search_result_recommend_arrow"
    	android:layout_centerVertical="true"
    	android:layout_marginRight="10dp"
    	android:orientation="vertical">
    	<TextView
		    android:tag="haici_sdkb_search_result_recommend_label"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:singleLine="true"
		    android:textColor="#999a95"
		    android:textSize="14sp"/>
    	<TextView
    	    android:tag="haici_sdkb_search_result_recommend_define"
    	    android:layout_width="fill_parent"
    	    android:layout_height="wrap_content"
    	    android:layout_marginTop="5dp"
    	    android:singleLine="true"
    	    android:textColor="#ffffff"
    	    android:textSize="14sp"/>
    </LinearLayout>
</RelativeLayout>

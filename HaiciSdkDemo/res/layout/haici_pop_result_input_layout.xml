<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:background="@drawable/haici_pop_result_top_bg"
    android:tag="haici_pop_result_input_view">
    <ImageView
        android:id="@+id/haici_pop_result_input_view_logo"
        android:tag="haici_pop_result_input_view_logo" 
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:src="@drawable/haici_pop_logo"/>
    <ImageView
        android:id="@+id/haici_pop_result_input_view_search_btn"
        android:tag="haici_pop_result_input_view_search_btn" 
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingLeft="10dp"
        android:paddingRight="15dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:src="@drawable/haici_pop_search"/>
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_toLeftOf="@id/haici_pop_result_input_view_search_btn"
        android:layout_toRightOf="@id/haici_pop_result_input_view_logo"
        android:layout_alignParentBottom="true"
	    android:layout_centerVertical="true"
	    android:layout_marginBottom="8dp"
	    android:layout_marginTop="8dp"
	    android:background="@drawable/haici_pop_result_input_bg">
        <ImageView
	        android:id="@+id/haici_pop_result_input_view_delete_btn"
	        android:tag="haici_pop_result_input_view_delete_btn"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:layout_alignParentRight="true"
	        android:paddingLeft="10dp"
	        android:paddingRight="10dp"
	        android:src="@drawable/haici_pop_delete"
	        android:visibility="visible"/>
	    <EditText
	        android:id="@+id/haici_pop_result_input_view_edittext"
	        android:tag="haici_pop_result_input_view_edittext"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_toLeftOf="@id/haici_pop_result_input_view_delete_btn"
	        android:background="#ffffff"
	        android:gravity="center_vertical"
	        android:maxLength="32"
	        android:paddingLeft="6dp"
	        android:scrollbars="none"
	        android:singleLine="true"
	        android:textColor="#000000"
	        android:textColorHint="#cfcfcf"
	        android:textSize="16sp"/>
    </RelativeLayout>
</RelativeLayout>